<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="40dp"
    android:layout_height="match_parent"
    tools:context=".activities.TestActivity">

    <EditText
        android:id="@+id/s_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/stress_rate"
        android:inputType="number"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <EditText
        android:id="@+id/a_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:layout_marginTop="68dp"
        android:hint="@string/anxiety_rate"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="50dp" />

    <EditText
        android:id="@+id/d_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="140dp"
        android:hint="@string/dep_rate"
        android:inputType="number"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="40dp" />

    <EditText
        android:id="@+id/g_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="212dp"
        android:hint="@string/general_rate"
        android:inputType="number"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="64dp" />

    <EditText
        android:id="@+id/h_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="284dp"
        android:hint="@string/happy_rate"
        android:inputType="number"
        android:textSize="21sp"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="29dp" />

    <Button
        android:id="@+id/send_mood_test"
        android:layout_width="match_parent"
        android:text="@string/send"
        android:layout_height="50dp"
        android:backgroundTint="#002137"
        android:layout_marginTop="60dp"
        app:layout_constraintTop_toBottomOf="@+id/h_rate"
        tools:layout_editor_absoluteX="40dp" />
</androidx.constraintlayout.widget.ConstraintLayout>